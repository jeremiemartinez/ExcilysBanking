<?xml version="1.0" encoding="UTF-8"?>
<beans:beans xmlns="http://www.springframework.org/schema/security"
	xmlns:beans="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
		http://www.springframework.org/schema/security http://www.springframework.org/schema/security/spring-security-3.1.xsd">

	<beans:bean id="authSuccessHandler"
		class="com.excilys.excilysbanking.web.success.AuthenticationSuccessHandlerImpl" />

	<http>
		<intercept-url pattern="/secured/admin/**" access="ROLE_ADMIN" />
		<intercept-url pattern="/secured/**" access="ROLE_USER" />
		<intercept-url pattern="/**" access="IS_AUTHENTICATED_ANONYMOUSLY" />
		<form-login login-page="/login.html"
			authentication-success-handler-ref="authSuccessHandler"
			authentication-failure-url="/loginFail.html" />
		<session-management invalid-session-url="/sessionTimeOut.html"
			session-authentication-error-url="/tooManySessions.html">
			<concurrency-control max-sessions="1" error-if-maximum-exceeded="true"
				expired-url="/tooManySessions.html" />
		</session-management>

		<logout logout-success-url="/index.html" />
	</http>

	<authentication-manager>
		<authentication-provider user-service-ref="userService">
		
			<password-encoder hash="sha">
				<salt-source user-property="username" />
			</password-encoder>
		</authentication-provider>
	</authentication-manager>

</beans:beans>
